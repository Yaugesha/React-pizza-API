<h1><%= @pizza.name %></h1>

<strong>
  <%= @pizza.soldOut ? "SOLD OUT": "" %>
</strong>
<p>Price: <%= @pizza.unitPrice %></p>
<p>Ingredients: 
  <% @ingredients.each do |ingredient| %>
    <%= ingredient %>
  <% end %>  
</p>
<%= image_tag url_for(@pizza.imageUrl) %>

<ul>
  <li><%= link_to "Edit", edit_pizza_path(@pizza) %></li>
  <li><%= link_to "Destroy", pizza_path(@pizza), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %></li>  
</ul>